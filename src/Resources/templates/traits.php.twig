<?php
namespace {{ namespace }};
{%- if use_statements | length %}

{% for use_statement in use_statements if use_statement.isTrait() %}
use {{ use_statement.namespace }}\{{ class_name }}Trait as {{ use_statement.alias }};
{% endfor %}
{% endif %}

/**
 * Trait of traits generated for {{ class_name }}
 * This is the guy that the main class needs to require, and ensures that everything is glued
 * together
 */
trait {{ class_name }}Traits
{
    {%- for use_statement in use_statements if use_statement.isTrait() %}
    use {{ use_statement.alias }};
    {% endfor %}

}
